<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.userinterfacewidgets"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.userinterfacewidgets.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.userinterfacewidgets.ImageActivity"
            android:label="@string/title_activity_image" >
        </activity>
        <activity
            android:name="com.example.userinterfacewidgets.ButtonActivity"
            android:label="@string/title_activity_button" >
        </activity>
        <activity
            android:name="com.example.userinterfacewidgets.TextFieldActivity"
            android:label="@string/title_activity_text_field" >
        </activity>
        <activity
            android:name="com.example.userinterfacewidgets.CheckBoxActivity"
            android:label="@string/title_activity_check_box" >
        </activity>
        <activity
            android:name="com.example.userinterfacewidgets.RadioButtonActivity"
            android:label="@string/title_activity_radio_button" >
        </activity>
        <activity
            android:name="com.example.userinterfacewidgets.SpinnerActivity"
            android:label="@string/title_activity_spinner" >
        </activity>
        <activity
            android:name="com.example.userinterfacewidgets.PickerActivity"
            android:label="@string/title_activity_picker" >
        </activity>
    </application>

</manifest>