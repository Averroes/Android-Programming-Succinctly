<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >
    <Button
        android:tag="images"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:padding="20dp"
		android:text="Images"
		android:onClick="selectActivity" />
    <Button
        android:tag="buttons"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:padding="20dp"
		android:text="Buttons"
		android:onClick="selectActivity" />
    <Button
        android:tag="textFields"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:padding="20dp"
		android:text="Text Fields"
		android:onClick="selectActivity" />
    
    <Button
        android:tag="checkBoxes"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:padding="20dp"
		android:text="Check Boxes"
		android:onClick="selectActivity" />
    
    <Button
        android:tag="radioButtons"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:padding="20dp"
		android:text="Radio Buttons"
		android:onClick="selectActivity" />
    
    <Button
        android:tag="spinners"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:padding="20dp"
		android:text="Spinners"
		android:onClick="selectActivity" />
    <Button
        android:tag="pickers"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:padding="20dp"
		android:text="Pickers"
		android:onClick="selectActivity" />
    
    
</LinearLayout>